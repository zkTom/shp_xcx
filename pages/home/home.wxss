.home{
  padding:40rpx 20rpx;
  position: relative;
  height: auto;
}
.home-content{
  margin-top: 100rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-flow: row wrap;
  width: 100%;
}

.home-item{
  width: 50%;
  padding: 0;
  margin: 30rpx 0;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}

.home-item .img-wrap{
  width: 225rpx;
  height: 225rpx;
  margin-bottom: 20rpx;
}

.home-item text{
  color: #000;
}

.more{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}

.category-wrap{
  border-top: 1px solid #666;
  padding-left:30rpx;
  margin-bottom: 30rpx;
  background-color: #f8f8f8;
  width: 100%;
  height: auto;
}
.category{
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}
.category > text{
  color:#000;
  padding:10rpx 0;
  border-bottom: 1px solid #ccc;
  flex:1;
}

.category-list{
  display: flex;
  flex-flow: row wrap;
  margin-top: 20rpx;
}

.category-item{
  padding: 10rpx;
  margin-right:20rpx;
  margin-bottom: 20rpx;
  color: #000;
  border:1px solid #ccc;
}